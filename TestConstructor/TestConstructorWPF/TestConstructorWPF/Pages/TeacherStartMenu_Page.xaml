<Page x:Class="TestConstructorWPF.Pages.TeacherStartMenu_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestConstructorWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeacherStartMenu_Page">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Добавить дисциплину" Margin="10" x:Name="CreateNewacAdemicSubject_Page"
                Style="{DynamicResource RoundedButtonApp}" Height="70" Width="180" Click="CreateNewacAdemicSubject_Page_Click"/>
            <Button Content="Тесты" Margin="10"
                Style="{DynamicResource RoundedButtonApp}" Height="70" Width="180"/>
        </StackPanel>
        <Button Content="Вернуться к окну аторизации" x:Name="backToAuthorization"
                Margin="10" VerticalAlignment="Bottom"
                Style="{DynamicResource RoundedButtonApp}" Height="70" Width="250" Click="backToAuthorization_Click"/>
    </Grid>
</Page>
